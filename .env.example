# Backend Configuration
# Port for the backend server (default: 5000)
PORT=5000

# MongoDB Configuration
# Local MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/book-explorer

# For MongoDB Atlas (if using cloud database instead of local)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/book-explorer

# Frontend Configuration (for Vite)
# API base URL for frontend to connect to backend
VITE_API_URL=http://localhost:5000

# Development Environment
NODE_ENV=development
